{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier l'utilisateur</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.nom, {
                                'attr': {'class': 'form-control'},
                                'label': 'Nom',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prenom, {
                                'attr': {'class': 'form-control'},
                                'label': 'Prénom',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.email, {
                            'attr': {'class': 'form-control'},
                            'label': 'Email',
                            'label_attr': {'class': 'form-label'}
                        }) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.motdepasse, {
                            'attr': {'class': 'form-control'},
                            'label': 'Nouveau mot de passe (laisser vide si inchangé)',
                            'label_attr': {'class': 'form-label'},
                            'required': false
                        }) }}
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary me-md-2">
                            <i class="bi bi-arrow-left"></i> Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}